@model List<Films>
@{
    ViewData["Title"] = "Kinder";
}
<h1>@ViewData["id"]</h1>

<div>
    <h1>Alle Kinderfilms!</h1>
    @foreach (Films Kinderfilm in Model)
    {
        <div class="film">
            <img src="@Kinderfilm.Poster" alt="@Kinderfilm.Naam">
            <a href="/film/@Kinderfilm.id">@Kinderfilm.Naam</a>
        </div>
    }
</div>