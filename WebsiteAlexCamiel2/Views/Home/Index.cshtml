@model List<Films>  
@{
    ViewData["Title"] = "Home Page";
}
<h1 class="display-4">Welcome, @ViewData["user"]</h1>
<div>
    @foreach(Films film in Model)
    {
<div class="film">
    <img src="@film.Poster" alt="@film.Naam">
    <div class="filmtitel"><a href="/film/@film.id">@film.Naam</a></div>
</div>
    }
</div>